/*Text Styles*/

body
  font-family: Arial, Helvetica, sans-serif
  font-size: 24px
  color: $gray

$titles = 6

for title in $titles..1
  h{ title }
    font-size: (3.5rem / (title - (title * 1.2)))
    margin: 0

p
  margin: 0
  font-size: 1.1rem

small
  font-size: 0.7rem

/*icon Fonts*/

@font-face
  font-family: 'icomoon'
  src: url('../../fonts/icomoon.eot?3ln22b')
  src: url('../../fonts/icomoon.eot?3ln22b#iefix') format('../../embedded-opentype'), \
       url('../../fonts/icomoon.ttf?3ln22b') format('truetype'), \
       url('../../fonts/icomoon.woff?3ln22b') format('woff'), \
       url('../../fonts/icomoon.svg?3ln22b#icomoon') format('svg')
  font-weight: normal
  font-style: normal
  font-display: block

[class^="icon-"], [class*=" icon-"]
  font-family: 'icomoon' !important
  speak: never
  font-style: normal
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1

  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

.icon-react:before
  content: "\e900"
  color: #61dafb
